#include <iostream>
#include<stdio.h>
#include<stdlib.h>
#include<iomanip>

using namespace std;

struct node
{
	int data;
	struct node*next;
};

void additem(struct node** head, int item)
{
	struct node* numberNode =
			(struct node*) malloc(sizeof(struct node));
	numberNode->data=item;
	numberNode->next=(*head);
	numberNode->next=(*head);
	(*head) = numberNode;

}

void traverseList(struct node*head)
{
	struct node*temp=head;
	while(temp!=NULL)
	{
		printf("%d ", temp->data);
		temp=temp->next;
		}
}

int sum(node *saveNumber)
{
	if(saveNumber == NULL)
		return 0;
	else

		return saveNumber->data+sum(saveNumber->next);
}

int main()
{
	struct node* head=NULL;
	additem (&head, 1);
	additem (&head, 2);
	additem (&head, 3);
	additem (&head, 4);
	additem (&head, 5);
	additem (&head, 6);
	additem (&head, 7);
	additem (&head, 8);
	additem (&head, 9);
	additem (&head, 10);

	traverseList(head);
	printf("\n The sum of the linked list is \n");

	cout << sum(head) <<endl;


}
